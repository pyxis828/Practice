@model MyMusicStore.Models.EmailFormModel
@{
    ViewBag.Title = "Contact Us";
}
<link href="~/Content/contact.css" rel="stylesheet" />


    <h1 class="text-center">@ViewBag.Title</h1>

    <section>
        @using (Html.BeginForm())
        {@Html.AntiForgeryToken()
            <h3>Send your comments</h3>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label"  })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>
            <div class="form-group" >
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Send" />
                </div>
            </div> }
    </section >
    <div class="row col-md-12 divider"  id="contactForm"><h1></h1></div>  
        <address class="col-md-2">
            1234 Rhapsody Lane<br />
            Opus, OH 44142<br />
        </address>  
        <address class="col-md-3 col-md-offset-7">
            <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
            <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
        </address>    
    <script src="~/Scripts/jquery.validate.js"></script>
